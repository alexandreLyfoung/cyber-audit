{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Authentification{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <h3>PASDEBOL App</h3>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">Connexion</div>
                <form method="post">
                    <div class="card-body">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                        #}
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">DÃ©connexion</a>
                            </div>
                        {% endif %}
                    </div>
                    <div class="card-footer d-flex justify-content-center">
                        <div class="hstack gap-3">
{#                            <a class="btn btn-lg btn-outline-danger" href="{{ path('app_landing') }}">{{ 'common.navActions.back'|trans }}</a>#}
                            <button class="btn btn-lg btn-outline-success" type="submit">Connexion</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
