<div class="row mt-3">
    <div class="col">
        <div class="card">
            <div class="card-header h5">Payer ma contribution {{ contribution.year }}</div>
            {{ form_start(form) }}
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        {{ form_row(form.cardOwner) }}
                        {{ form_row(form.cardNumbers) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.cardType) }}
                        {{ form_row(form.cardExpirationDate) }}
                        {{ form_row(form.cardCode) }}
                    </div>
                </div>

            </div>
            <div class="card-footer d-flex justify-content-center">
                <div class="hstack gap-3">
                    <a class="btn btn-danger btn-sm" href="{{ path('app_company_contribution_show',{id:contribution.id}) }}">Retour</a>
                    <button class="btn btn-success btn-sm">{{ button_label|default('Payer') }}</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
